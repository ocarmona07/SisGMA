@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Section = "Inventario";
    ViewBag.Title = ViewBag.Section;
}

<section class="content-header">
    <h1>@ViewBag.Section</h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", "Inicio", new { area = "" })"><i class="fa fa-home"></i>Inicio</a></li>
        <li class="active">@ViewBag.Section</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-lg-3 col-xs-6">
            <div class="small-box bg-blue">
                <div class="inner">
                    <h3>@(1 + 1)</h3>
                    <p>Productos</p>
                </div>
                <div class="icon">
                    <i class="fa fa-dropbox"></i>
                </div>
                <a href="@Url.Action("Index", "Productos", new {area = "Inventario"})" class="small-box-footer">Ingresar <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <div class="col-lg-3 col-xs-6">
            <div class="small-box bg-green">
                <div class="inner">
                    <h3>@(1 + 1)</h3>
                    <p>Servicios</p>
                </div>
                <div class="icon">
                    <i class="fa fa-wrench"></i>
                </div>
                <a href="@Url.Action("Index", "Servicios", new {area = "Inventario"})" class="small-box-footer">Ingresar <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div>
    </div>
</section>